<?xml version="1.0" ?>
<robot name = "camel_testingAM">
    <material name = "lime">
        <color rgba = "0.804 0.863 0.223 0.9"/>
    </material>

    <material name = "red">
        <color rgba = "0.914 0.263 0.212 0.9"/>
    </material>

    <material name = "stylish">
        <color rgba = "0.243 0.271 0.318 0.9"/>
    </material>

    <material name = "black">
        <color rgba = "0.0 0.0 0.0 0.9"/>
    </material>

    <link name = "world"/>
    <joint name = "fixed_world" type = "fixed">
        <parent link = "world"/>
        <child link = "base"/>
    </joint>

    <link name = "base">
        <visual>
            <origin rpy = "0.0 0.0 0.0" xyz="0.0 0.0 0.25"/>
            <geometry>
                <box size = "0.02 0.02 0.5"/>
            </geometry>
            <material name = "lime"/>
        </visual>

        <inertial>
            <mass value = "0.335"/>
            <inertia ixx = "2.42e-4" iyy = "1.53e-4" izz = "1.53e-4" ixy = "0" ixz = "0" iyz = "0"/>
        </inertial>
    </link>

    <joint name = "observ_baring" type = "continuous">
        <origin rpy = "0 0 0 " xyz = "0.01 0 0.5"/>
        <parent link = "base"/>
        <child link = "rod"/>
        <axis xyz = "1 0 0"/>
    </joint>

    <link name = "rod">
        <visual>
            <origin rpy = "0.0 0.0 0.0" xyz = "0.01 0.0 0.0"/>
            <geometry>
                <box size = "0.02 0.1 0.03"/>
            </geometry>
            <meterial name = "red"/>
        </visual>

        <inertial>
            <mass value = "0.035"/>
            <inertia ixx = "2.42e-4" iyy = "1.53e-4" izz = "1.53e-4" ixy = "0" ixz = "0" iyz = "0"/>
        </inertial>
    </link>
    
    <joint name = "dumbball_fixed" type = "fixed">
        <parent link = "rod"/>
        <child link = "weights"/>
        <origin rpy = "0 0 0" xyz = "0.0 0.05 0.0"/>
    </joint>

    <link name = "weights">
        <!-- <visual>
            <origin rpy = "0 1.570796 0" xyz= "-0.024 0 0"/>
            <geometry>
                <cylinder radius = "0.0187" length = "0.048"/>
            </geometry>
            <material name = "stylish"/>
        </visual>

        <inertial>
            <mass value = "0.4"/>
            <inertia ixx = "6.99e-5" iyy = "1.11e-4" izz = "1.11e-4" ixy = "0" ixz = "0" iyz = "0"/>
        </inertial> -->

        <visual>
            <origin rpy = "0 1.570796 0" xyz= "-0.012 0 0"/>
            <geometry>
                <cylinder radius = "0.0187" length = "0.024"/>
            </geometry>
            <material name = "stylish"/>
        </visual>
        <inertial>
            <mass value = "0.2"/>
            <inertia ixx = "3.495e-5" iyy = "0.555e-4" izz = "0.555e-4" ixy = "0" ixz = "0" iyz = "0"/>
        </inertial>
    </link>

    <joint name = "dumbball_motor" type = "revolute">
        <parent link = "rod"/>
        <child link = "motor"/>
        <origin rpy = "0 0 0" xyz = "0.02 -0.05 0.0"/>
        <axis xyz = "1 0 0"/>
        <limit velocity= "18"/>
    </joint>

    <link name = "motor">
        <visual>
            <origin rpy = "0 1.570796 0" xyz= "0.017 0 0"/>
            <geometry>
                <cylinder radius = "0.038" length = "0.034"/>
            </geometry>
            <material name = "black"/>
        </visual>

        <inertial>
            <mass value = "0.335"/>
            <inertia ixx = "2.42e-4" iyy = "1.53e-4" izz = "1.53e-4" ixy = "0" ixz = "0" iyz = "0"/>
        </inertial>
    </link>

</robot>
